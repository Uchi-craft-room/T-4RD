<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <chase-distance-m type="double" archive="y"> -23 </chase-distance-m>

  <view n="100">
    <name>Passanger Seat View</name>
    <internal archive="y">true</internal>
    <type>lookfrom</type>
    <config>
      <from-model type="bool">true</from-model>
      <ground-level-nearplane-m type="double">0.5f</ground-level-nearplane-m>
       <x-offset-m archive="y">  0.000 </x-offset-m>	<!-- Right -->
       <y-offset-m archive="y">  0.95 </y-offset-m>	<!-- Up    -->
       <z-offset-m archive="y"> -1.370 </z-offset-m>	<!-- Back  -->
      <pitch-offset-deg> -15 </pitch-offset-deg>
      <default-field-of-view-deg> 76 </default-field-of-view-deg>
      <dynamic-view type="bool">true</dynamic-view>
        <limits>
          <enabled type="bool">true</enabled>
          <left>
            <heading-max-deg type="double">140</heading-max-deg>
            <x-offset-max-m type="double">0.20</x-offset-max-m>
            <x-offset-threshold-deg type="double">65</x-offset-threshold-deg>
          </left>
          <right>
            <heading-max-deg type="double">140</heading-max-deg>
            <x-offset-max-m type="double">0.20</x-offset-max-m>
            <x-offset-threshold-deg type="double">65</x-offset-threshold-deg>
          </right>
        </limits>
      </config>
  </view>

  <view n="101">
    <name>HUD View</name>
    <type>lookfrom</type>
    <internal archive="y">true</internal>
    <config>
      <from-model type="bool">true</from-model>
      <from-model-idx type="int">0</from-model-idx>
      <ground-level-nearplane-m type="double">0.01f</ground-level-nearplane-m>
      <x-offset-m archive="y"> 0.000 </x-offset-m> <!--Right-->
      <y-offset-m archive="y"> 0.66 </y-offset-m> <!--Up-->
      <z-offset-m archive="y"> -3.05 </z-offset-m> <!--Back-->
      <pitch-offset-deg> -5 </pitch-offset-deg>
      <default-field-of-view-deg type="double"> 30 </default-field-of-view-deg>
    </config>
  </view>

  <view n="0">
    <internal archive="y">true</internal>
    <config>
       <x-offset-m archive="y">  0.000 </x-offset-m>	<!-- Right -->
       <y-offset-m archive="y">  0.66 </y-offset-m>	<!-- Up    -->
       <z-offset-m archive="y"> -3.00 </z-offset-m>	<!-- Back  -->
       <pitch-offset-deg> -5 </pitch-offset-deg>
      <default-field-of-view-deg> 76 </default-field-of-view-deg>
    </config>
  </view>

</PropertyList>


















